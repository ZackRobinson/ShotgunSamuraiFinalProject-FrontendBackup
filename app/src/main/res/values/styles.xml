<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16dp</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/colorAccent</item>
        <item name="itemTextColor">@color/white</item>
        <!--<item name="itemBackground">@drawable/navigation_bar_item_bg</item>-->
        <!--<item name="itemIconTint">@color/navigation_bar_txt_color</item>-->
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
